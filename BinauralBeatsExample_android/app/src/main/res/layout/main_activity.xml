<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/gmtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gmt"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_horizontal"
        android:soundEffectsEnabled="false"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
    <RadioGroup
            android:id="@+id/radioBeatType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:soundEffectsEnabled="false"
            >

            <RadioButton
                android:id="@+id/radioBinaural"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/binaural_radio"
                android:soundEffectsEnabled="false"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioIsochronic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="false"
                android:text="@string/isochronic_radio" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <EditText
                    android:id="@+id/etCarrierFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/carrier_hint"
                    android:text="200"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:soundEffectsEnabled="false"
                    android:gravity="center">
                </EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carrier_label"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tvCarrierFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_applicable"
                    android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>

        <ToggleButton
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textOn=""
            android:textOff=""
            android:onClick="clickPlay"
            android:background="@drawable/button_custom"
            android:soundEffectsEnabled="false"
            android:gravity="center"
            />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

            <EditText
                android:id="@+id/etBeatFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/beat_hint"
                android:text="8"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:soundEffectsEnabled="false"
                android:gravity="center">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/beat_label"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvBeatFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_applicable"
                android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_Focus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="f_Focus"
                android:text="Focus" />

            <Button
                android:id="@+id/btn_Creativity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="f_Creativity"
                android:text="Creativity" />

            <Button
                android:id="@+id/btn_Relaxation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="f_Relaxation"
                android:text="Relaxation" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_Sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="f_Sleep"
                android:text="Sleep" />

            <Button
                android:id="@+id/btn_Chanting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="f_Chanting"
                android:text="Chanting" />

            <Button
                android:id="@+id/btn_Intuition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="f_Intuition"
                android:text="Intuition" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_Astral_Travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="f_Astral_Travel"
                android:text="Astral Travel" />

            <Button
                android:id="@+id/btn_Healing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="f_Healing"
                android:text="Healing" />

            <Button
                android:id="@+id/btn_Alpha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="f_Alpha"
                android:text="Alpha" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_Intelligence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="f_Intelligence"
                android:text="Intelligence" />

            <Button
                android:id="@+id/btn_Euphoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="f_Euphoria"
                android:text="Euphoria" />

        </TableRow>

    </TableLayout>

</LinearLayout>